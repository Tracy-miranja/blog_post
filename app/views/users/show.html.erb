<h1>Users Info</h1>
<h1><%= @user.name %></h1>
<div><img src="<%= @user.photo %>" alt="User Photo"></div>
Number of posts: <%= @user.posts_counter %><br>
<h2>Bio</h2>
<%= @user.bio %>
<%= link_to 'Create New Post', new_user_post_path(@user)%>
<% @posts.limit(3).each do |post| %>
  <%= link_to user_post_path(@user, post) do %>
    <li><%= post.title %></li>
    <li><%= post.text %></li>
    <li>Comments: <%= post.comments_counter %></li>
    <li>Likes: <%= post.likes_counter %></li>
  <% end %>
<% end %>

<% if @user.posts_counter.positive? %>
  <%= link_to "See All Posts", user_posts_path(@user) %>
<% end %>
