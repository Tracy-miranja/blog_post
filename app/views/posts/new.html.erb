
<%= form_with(model: @post, url: user_user_create_post_path, method: :post, remote: false)  do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, size: "65x6", placeholder: "Post title", class: "w-1/2" %>
    </div>
    <div>
      <%= f.label :text %>
      <%= f.text_area :text, size: "70x6", placeholder: "Your post content", class: "w-1/2" %>
    </div>
    <%= f.submit "Create Post", class: "btn btn-primary" %>
  <% end %>
  
  