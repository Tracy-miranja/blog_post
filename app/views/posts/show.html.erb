<h1>Post Details</h1>
<h4><%= @post.author.name %></h4>
<p><%= @post.text %></p>
<li>comments: <%= @post.comments_counter %></li>
<li>likes: <%= @post.likes_counter %></li>

<%= link_to 'Create Comments', new_user_post_comment_path(@user, @post)%>
<%= form_with(model: @like, url: user_post_likes_path(@user, @post), method: :post) do |form| %>
  <%= form.hidden_field :post_id, value: @post.id %>
  <%= form.submit "Like" %>
<%end%>
<% if @comments.present? %>
<h2>Comments:</h2>
<% @comments.each do |comment| %>
  <p><%= comment.text %> - <%= comment.author.name %></p>
<% end %>
<% else %>
  <p>No comments.</p>
<% end %>


<% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value %>
    </div>
  <% end %>


